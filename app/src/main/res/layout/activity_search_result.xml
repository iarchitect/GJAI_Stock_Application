<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_result_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#F1DBDB"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/stock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:background="#F1DBDB"
            android:text="회사이름"
            android:textSize="20dp"

            app:layout_constraintBottom_toTopOf="@+id/recyclerView_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/stock_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="44dp"
            android:background="#F1DBDB"
            android:textStyle="bold"
            android:text="59, 700"
            android:textSize="30dp"
            app:layout_constraintStart_toEndOf="@+id/stock_name"
            app:layout_constraintTop_toTopOf="parent" />

        <!--        <ImageView-->
<!--            android:id="@+id/recyclerView_image"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="126dp"-->
<!--            android:background="#F1DBDB"-->
<!--            android:src="@drawable/stockchart_example"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            tools:layout_editor_absoluteY="50dp" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/activity_search_gift_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:drawableLeft="@drawable/ic_baseline_redeem_24"
        android:text="선물하기"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_result_card" />

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="423dp" />
</androidx.constraintlayout.widget.ConstraintLayout>