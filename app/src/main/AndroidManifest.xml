<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gjai.scone">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:name="com.gjai.scone.GlobalApplication"
        android:allowBackup="true"
        android:icon="@drawable/scone_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.gjai.scone.NicknameActivity"></activity>
        <activity android:name="com.gjai.scone.NotificationActivity" />
        <activity android:name="com.gjai.scone.PresentActivity" />
        <activity android:name="com.gjai.scone.MyinfoActivity" />
        <activity android:name="com.gjai.scone.SearchResultActivity" />
        <activity
            android:name="com.gjai.scone.CouponRegisterActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.gjai.scone.SignupActivity" />
        <activity android:name="com.gjai.scone.InfoActivity" />
        <activity android:name="com.gjai.scone.GoogleSignInActivity" />
        <activity android:name="com.gjai.scone.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.gjai.scone.MainActivity" />
        <activity android:name="com.gjai.scone.SigninActivity" /> <!-- - 안드로이드 8.0 이상 푸시 처리 추가 코드 -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/scone_logo1" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <service
            android:name="com.gjai.scone.MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>